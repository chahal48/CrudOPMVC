@model CrudOPMVC.Models.ContactModel

@{
    ViewBag.Title = "AddContact";
}

@using (Html.BeginForm("AddContact", "Contact", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()
    <br />
    <h2>Add Contact</h2>

    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        @{Html.RenderPartial("_ContactPartialView", Model);}

        <div class="form-group">
            <div class="row">
                <div class="col-md-3">
                    <img src="~/Upload/blank.jpg" id="imagePreview" alt="Show Image" class="rounded-2" style="width:84px;height:84px;">

                    <input type="file" id="Image" name="Image" onchange="return fileValidation()" />
                </div>
                <div class="col-md-2"></div>
                <div class="col-md-offset-2 col-md-3">
                    <br />
                    <br />
                    <br />
                    <input type="submit" value="Save" class="btn btn-outline-success" />
                    @Html.ActionLink("Show List", "GetAllContacts", "Contact", new { @class = "btn btn-outline-dark" })
                </div>
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10" style="color:darkred">
                @ViewBag.Message
            </div>
        </div>
    </div>

}

<script src="~/Content/jquery.min.js"></script>
<script src="~/Content/jquery.validate.min.js"></script>
<script src="~/Content/jquery.validate.unobtrusive.min.js"></script>

