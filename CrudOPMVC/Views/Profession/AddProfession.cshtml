@model CrudOPMVC.Models.ProfessionModel

@{
    ViewBag.Title = "AddProfession";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <br />
    <h2>Add Profession</h2>

    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        @{Html.RenderPartial("_ProfessionPartialView", Model);}

        <div class="form-group">
            <div class="row">
                <div class="col-md-3"></div>
                <div class="col-md-offset-2 col-md-3">
                    <input type="submit" value="Save" class="btn btn-outline-success" /> &nbsp;
                    @Html.ActionLink("Cancel", "GetAllProfession", "Profession", new { @class = "btn btn-outline-info" })
                </div>
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10" style="color:darkred">
                @ViewBag.Message

            </div>
        </div>
    </div>

}

<script src="~/Content/jquery.min.js"></script>
<script src="~/Content/jquery.validate.min.js"></script>
<script src="~/Content/jquery.validate.unobtrusive.min.js"></script>


